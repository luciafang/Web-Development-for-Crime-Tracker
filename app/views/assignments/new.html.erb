<div class="row">
  <div class="col s8">
    <h4>New Assignment For Officer: <%= [@officer.last_name, @officer.first_name].join(', ') %></h4>
    <%= simple_form_for(@assignment) do |f| %>
      <% if @assignment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@assignment.errors.count, "error") %> prohibited this assignment from being saved:</h2>
          <ul>
            <% @assignment.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.error_notification %>

      <p>Select Investigation:</p>
      <div class="form-inputs">
        <%= f.input :officer_id, as: :hidden, input_html: { value: @officer.id } %>
        <%= f.input :investigation_id, collection: Investigation.all, label_method: :title, value_method: :id, include_blank: false, label: 'Investigation Title' %>

        <%= f.input :start_date, as: :date, input_html: { class: 'datepicker' } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, 'Create Assignment' %>
      </div>
    <% end %>
  </div>
</div>
