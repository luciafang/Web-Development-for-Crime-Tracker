<div class="row">
  <div class="col s12 m8 l6 offset-m2 offset-l3"> <!-- Centering the card for medium and large screens -->
    <div class="card login lighten-4">
      <div class="card-content">
        <span class="card-title">Login here</span>
        <%= form_with url: sessions_path, local: true do |f| %>
          <div class="input-field">
            <%= f.label :username %>
            <%= f.text_field :username, class: 'validate' %>
          </div>

          <div class="input-field">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'validate' %>
          </div>
          
          <div class="actions">
            <%= f.submit "Log In", class: 'btn waves-effect waves-light' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
